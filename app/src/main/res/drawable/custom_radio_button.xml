<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <selector>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/selected_option" />
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="@color/selected_option_border" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/unselected_option" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1dp" android:color="@color/card_blue" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
