<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_option" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/selected_option_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/unselected_option" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/card_blue" />
        </shape>
    </item>
</selector>
